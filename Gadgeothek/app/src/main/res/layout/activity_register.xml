<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="16dp"
    android:layout_marginHorizontal="8dp"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="net.resoulance.gadgeothek.RegisterAlternativeActivity"
    android:orientation="vertical">

    <TextView
        android:id="@+id/h1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:text="Benutzer-Registration"
        android:textSize="25sp" />

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="188dp"
        android:layout_height="181dp"
        android:layout_gravity="center_horizontal"
        app:srcCompat="@drawable/hsr_logo" />

    <Space
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingLeft="40dp"
        android:paddingRight="40dp">


        <EditText
            android:id="@+id/nameText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:hint="Name"
            android:inputType="textPersonName" />

        <EditText
            android:id="@+id/eMailText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:hint="eMail Adresse"
            android:inputType="textEmailAddress" />

        <EditText
            android:id="@+id/matrikelnummerText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:hint="Matrikel-Nummer"
            android:inputType="textPersonName" />

        <EditText
            android:id="@+id/passwortTextEins"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:contentDescription="Passwort"
            android:ems="10"
            android:hint="Passwort"
            android:inputType="textPassword" />

        <EditText
            android:id="@+id/passwortTextZwei"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:hint="Passwort wiederholen"
            android:inputType="textPassword" />


    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:layout_weight="1"
        android:gravity="bottom"
        android:orientation="vertical">

        <Button
            android:id="@+id/registrierenButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:text="Registrieren" />

        <TextView
            android:id="@+id/textView6"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="right"
            android:text="Schon einen Account? Log dich ein!" />

    </LinearLayout>

</LinearLayout>