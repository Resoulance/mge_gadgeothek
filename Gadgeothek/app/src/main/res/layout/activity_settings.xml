<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="16dp"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="net.resoulance.gadgeothek.SettingsActivity"
    tools:showIn="@layout/activity_settings"
    android:orientation="vertical">

    <TextView
        android:id="@+id/textView8"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:text="Settings"
        android:textSize="25sp" />

    <Space
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:gravity="bottom"
        android:orientation="vertical">

        <TextView
            android:id="@+id/textView9"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Developer Settings" />

        <Button
            android:id="@+id/toastTesterButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="ToastTester" />

        <Button
            android:id="@+id/toOldRegisterButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="to_Register" />

        <Button
            android:id="@+id/toOldLoginButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="to_Login" />

    </LinearLayout>

</LinearLayout>
